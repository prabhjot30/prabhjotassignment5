<h2>Users Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Book ID</th>
      <th>Book Name</th>
      <th>Book Author</th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach(book=> { %>
      <tr>
        <!-- <td>
        <%= book.fullName %>
      </td> -->
        <td>
          <a href="<%= `/books/${book._id}` %>">
            <%= book.id %>
          </a>
        </td>
        <td>
          <%= book.name %>
        </td>
        <td>
          <%= book.authorName %>
        </td>
        <td>
            <a href="<%= `books/${book._id}/delete?_method=UPDATE` %>"
              onclick="return confirm('Are you sure you want to update this record?')">Delete</a>
          </td>
        <td>
          <a href="<%= `books/${book._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>